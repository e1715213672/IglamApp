<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IglamApp.Login"
             NavigationPage.HasNavigationBar="False">
    
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="White" Padding="18" CornerRadius="0">
                <Image Source="mediumsmall.png" HeightRequest="200" WidthRequest="200"></Image>
            </Frame>


            <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario"  FontSize="18" ></Entry>
            <Entry x:Name="txtContrasena" Placeholder="Ingrese la contraseña"  FontSize="18" IsPassword="True" ></Entry>

            <Label x:Name="Espacio" Text=" "></Label>


            <Button Text="Ingresar" x:Name="Ingresar" BackgroundColor="#2594f4" FontAttributes="Bold" Clicked="Ingresar_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>